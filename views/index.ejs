<%- contentFor('hero-section') %>
    <div class="welcome">
        <h1>Welcome to CSE Motors</h1>
        <figure>
            <img id="hero" src="../images/vehicles/delorean.jpg" alt="hero image: delorean" height="350" width="600">
            <figcaption>The Delorean</figcaption>
        </figure>
    </div>

    <%- contentFor('feature-article1') %>
        <article class="featured-card">

            <h2>DMC Delorean</h2>


            <ul class="delorean-features">
                <span class="title">DMC Delorean</span>
                <li>3 Cup Holders</li>
                <li>Superman Doors</li>
                <li>Fuzzy dice!</li>
                <li><img id="owntoday" src="../images/site/own_today.png" alt="Own today" height="50" width="120">
                </li>
            </ul>

        </article>

        <div class="section-wrapper">
            <%- contentFor('feature-article2') %>

                <div class="upgrade-list-wrapper">
                    <section class="upgrades-list">
                        <h2>Delorean Upgrades</h2>
                        <ul class="delorean-upgrades">
                            <li class="card-upgrades">
                                <img class="img-upgrade" src="../images/upgrades/flux-cap.png" alt="flux capacitor">
                                <a href="#">Flux Capacitor</a>
                            </li>
                            <li class="card-upgrades">
                                <img class="img-upgrade" src="../images/upgrades/flame.jpg" alt="flame">
                                <a href="#">Flame Decals</a>
                            </li>
                            <li class="card-upgrades">
                                <img class="img-upgrade" src="../images/upgrades/bumper_sticker.jpg"
                                    alt="bumper sticker">
                                <a href="#">Bumper Stickers</a>
                            </li>
                            <li class="card-upgrades">
                                <img class="img-upgrade" src="../images/upgrades/hub-cap.jpg" alt="hub cap">
                                <a href="#">Hub Caps</a>
                            </li>
                        </ul>
                    </section>
                    <!-- <section class="upgrades-list2">
                        <ul class="delorean-upgrades2">

                        </ul>
                    </section> -->
                </div>

                <%- contentFor('feature-article3') %>
                    <section class="reviews-list">
                        <h2>DMC Delorean Reviews</h2>
                        <ul class="delorean-reviews">
                            <li>"So fast it's almost like traveling in time" (4/5)</li>
