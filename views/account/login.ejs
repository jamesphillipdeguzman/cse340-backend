<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } %>

        <%- messages() %>

            <% if (errors) { %>
                <ul class="warnings">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <div class="form-wrapper">
                        <form id="loginForm" action="/account/login" method="POST">
                            <h2>Account Login</h2>
                            <hr />
                            <div class="form-group">
                                <label for="account_email">Email address</label>
                                <input type="email" class="form-control" id="account_email" name="account_email"
                                    placeholder="Enter email" required value="<%= account_email %>">
                            </div>

                            <div class="form-group">
                                <label for="account_password">Password</label>
                                <input type="password" class="form-control" id="account_password"
                                    name="account_password" placeholder="Password" required>
                                <small>Password must be at least 12 characters and contain at least 1 uppercase letter,
                                    1 number, and 1 special character</small>
                            </div>

                            <button type="submit" class="btn-submit">Login</button>
                            <p class="noaccount">No account? <a href="/account/register" id="register">Sign-up</a></p>
                        </form>
                    </div>

                    <script src="/js/script.js"></script>